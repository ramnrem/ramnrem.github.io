			header
				.container
					.row.justify-content-between
						.col-xl-3.col-lg-3.col-md-11.col-sm-4.col-6.z100
							a(href='#')
								img(src='img/logo-white.png', alt='Клаустрофобия Аркада')
						i.fa.fa-bars.js-header__navbar(aria-hidden='true').z100
						.col-xl-7.col-lg-8.col-md-12.col-sm-12.col-12
							nav.nav.justify-content-center.hidden-sm
								ul
									li
										a(href='#') &kcy;&acy;&rcy;&tcy;&acy;
									li
										a(href='#') &gcy;&acy;&lcy;&iecy;&rcy;&iecy;&yacy;
									li
										a(href='#') &kcy;&acy;&lcy;&iecy;&ncy;&dcy;&acy;&rcy;&softcy;
									li
